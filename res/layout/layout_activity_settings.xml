            <!-- تەكلىپ پىكىر بېرىش -->

            <RelativeLayout
                android:id="@+id/teklippost"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff" >

                <com.jezire.widget.IconView
                    android:id="@+id/TSIcon"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|center"
                    android:text="\ue07d"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.IconView
                    android:id="@+id/TMIcon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center|center"
                    android:text="\ue01e"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.UyghurTextView
                    android:id="@+id/teklip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/TSIcon"
                    android:layout_toRightOf="@+id/TMIcon"
                    android:gravity="center|right"
                    android:text="@string/Suggest"
                    android:textColor="#333333"
                    android:textSize="14sp" >
                </com.jezire.widget.UyghurTextView>
            </RelativeLayout>

            <!-- يېڭى نەشىر -->

            <RelativeLayout
                android:id="@+id/NewVersion"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:background="#fff" >

                <com.jezire.widget.IconView
                    android:id="@+id/VSIcon"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|center"
                    android:text="\ue098"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.IconView
                    android:id="@+id/VMIcon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center|center"
                    android:text="\ue01e"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.UyghurTextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/VSIcon"
                    android:layout_toRightOf="@+id/VMIcon"
                    android:gravity="center|right"
                    android:text="@string/Version"
                    android:textColor="#333333"
                    android:textSize="14sp" >
                </com.jezire.widget.UyghurTextView>
            </RelativeLayout>

            <!-- ئەپ ھەققىدە -->

            <RelativeLayout
                android:id="@+id/AppHeqqide"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:background="#fff" >

                <com.jezire.widget.IconView
                    android:id="@+id/ASIcon"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|center"
                    android:text="\ue08b"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.IconView
                    android:id="@+id/AMIcon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center|center"
                    android:text="\ue01e"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.UyghurTextView
                    android:id="@+id/AboutVer"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@+id/AMIcon"
                    android:gravity="center|bottom"
                    android:text="2.0"
                    android:textColor="#999999"
                    android:textSize="14sp" >
                </com.jezire.widget.UyghurTextView>

                <com.jezire.widget.UyghurTextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/ASIcon"
                    android:layout_toRightOf="@+id/AboutVer"
                    android:gravity="center|right"
                    android:text="@string/AppAbout"
                    android:textColor="#333333"
                    android:textSize="14sp" >
                </com.jezire.widget.UyghurTextView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>