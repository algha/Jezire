<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfcf"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#afc936" >

        <com.jezire.widget.IconView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="28sp" >
        </com.jezire.widget.IconView>

        <com.jezire.widget.UyghurTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20sp" >
        </com.jezire.widget.UyghurTextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#96b40b" >
        </View>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/SettingsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical" >

            <!-- سىيرىلما ئۇچۇر قوبۇل قىلىش -->

            <RelativeLayout
                android:id="@+id/siyrilmauqur"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff" >

                <com.jezire.widget.IconView
                    android:id="@+id/SIcon"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|center"
                    android:text="\ue094"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <LinearLayout
                    android:id="@+id/MIcon"
                    android:layout_width="43dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12.5dp"
                    android:background="@drawable/siyrilma_uchur"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:textColor="#999999" >

                    <View
                        android:id="@+id/SiyrilmaImage"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/siyrilma_uchur_image" >
                    </View>
                </LinearLayout>

                <com.jezire.widget.UyghurTextView
                    android:id="@+id/txtsiyrilma"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/SIcon"
                    android:layout_toRightOf="@+id/MIcon"
                    android:gravity="center|right"
                    android:text="@string/SettingsSiyrilma"
                    android:textColor="#333333"
                    android:textSize="14sp" >
                </com.jezire.widget.UyghurTextView>
            </RelativeLayout>

            <!-- ئېكران يورۇقلىقى -->

            <RelativeLayout
                android:id="@+id/ScreenBrightness"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:background="#fff" >

                <com.jezire.widget.IconView
                    android:id="@+id/CSIcon"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|center"
                    android:text="\ue01a"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.IconView
                    android:id="@+id/CMIcon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center|center"
                    android:text="\ue01e"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.UyghurTextView
                    android:id="@+id/screen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/CSIcon"
                    android:layout_toRightOf="@+id/CMIcon"
                    android:gravity="center|right"
                    android:text="@string/ScreenBright"
                    android:textColor="#333333"
                    android:textSize="14sp" >
                </com.jezire.widget.UyghurTextView>
            </RelativeLayout>

            <!-- غەملەك تازىلاش -->

            <RelativeLayout
                android:id="@+id/ClearGhemlek"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:background="#fff" >

                <com.jezire.widget.IconView
                    android:id="@+id/GSIcon"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|center"
                    android:text="\ue054"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <com.jezire.widget.IconView
                    android:id="@+id/GMIcon"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center|center"
                    android:text="\ue01e"
                    android:textColor="#999999"
                    android:textSize="24sp" >
                </com.jezire.widget.IconView>

                <TextView
                    android:id="@+id/CacheSize"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/GMIcon"
                    android:gravity="left|center" />

                <com.jezire.widget.UyghurTextView
                    android:id="@+id/cache"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/GSIcon"
                    android:layout_toRightOf="@+id/CacheSize"
                    android:gravity="center|right"
                    android:text="@string/CacheClear"
                    android:textColor="#333333"
                    android:textSize="14sp" >
                </com.jezire.widget.UyghurTextView>
            </RelativeLayout>

            <!-- قىستۇرمىلار -->

            <!-- <RelativeLayout
                android:id="@+id/Qisturmilar"
                android:layout_width="match_parent"
