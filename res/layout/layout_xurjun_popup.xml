<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center|center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#d3d3d3"
        android:minHeight="100dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:gravity="right|center"
            android:minHeight="40dp"
            android:orientation="horizontal" >

            <com.jezire.widget.IconView
                android:id="@+id/XurjunNameIcon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:gravity="center|center"
                android:textColor="#d7d7d7"
                android:textSize="20sp" >
            </com.jezire.widget.IconView>

            <com.jezire.algha.MyEditText
                android:id="@+id/XurjunName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/XurjunNameIcon"
                android:background="@drawable/edit_text_selector"
                android:gravity="right|center"
                android:hint="@string/PutLinkName"
                android:inputType="text"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#fff"
            android:gravity="right|center"
            android:minHeight="40dp" >

            <com.jezire.widget.IconView
                android:id="@+id/XurjunLinkIcon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:gravity="center|center"
                android:textColor="#d7d7d7"
                android:textSize="20sp" >
            </com.jezire.widget.IconView>

            <com.jezire.algha.MyEditText
                android:id="@+id/XurjunLink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/XurjunLinkIcon"
                android:background="@drawable/edit_text_selector"
                android:gravity="right|center"
                android:hint="@string/PutLinkAdress"
                android:inputType="text"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/XurjunColors"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center|center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#fff"
            android:minHeight="35dp"
            android:orientation="horizontal" >

            <com.jezire.widget.IconView
                android:id="@+id/cheyze"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center"
                android:tag="cheyze"
                android:textColor="#8560a8"
                android:textSize="20sp" >
            </com.jezire.widget.IconView>

            <com.jezire.widget.IconView
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center"
                android:tag="blue"
                android:textColor="#00aeef"
                android:textSize="20sp" >
            </com.jezire.widget.IconView>

            <com.jezire.widget.IconView
                android:id="@+id/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center"
                android:tag="green"
                android:textColor="#7cc576"
                android:textSize="20sp" >
            </com.jezire.widget.IconView>

            <com.jezire.widget.IconView
                android:id="@+id/yellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center"
                android:tag="yellow"
                android:textColor="#fbaf5d"
                android:textSize="20sp" >
            </com.jezire.widget.IconView>

            <com.jezire.widget.IconView
                android:id="@+id/red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center"
                android:tag="red"
                android:textColor="#ed1c24"
                android:textSize="20sp" >
            </com.jezire.widget.IconView>

            <com.jezire.widget.IconView
                android:id="@+id/brown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center"
                android:tag="brown"
                android:textColor="#707070"
                android:textSize="20sp" >
            </com.jezire.widget.IconView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center|center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center|center"
            android:minHeight="45dp"
            android:orientation="horizontal" >

            <com.jezire.widget.UyghurTextView
                android:id="@+id/BtnXurjunAction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:background="#afc936"
                android:gravity="center|center"
                android:textColor="#ffffff" />

            <com.jezire.widget.UyghurTextView
                android:id="@+id/BtnXurjunCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="1"
                android:background="#707070"
                android:gravity="center|center"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>